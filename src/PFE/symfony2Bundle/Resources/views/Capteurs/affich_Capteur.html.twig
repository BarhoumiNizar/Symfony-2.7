{%extends 'applicationBundle::starter.html.twig'%}
{%block body%}
{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('bundles/application/css/') }}" type="text/css" media="all" />
{% endblock %}
{%block content%}<div class="box box-info">
            <div class="box-header">
              

              <h3 class="box-title">Liste des Capteurs</h3>
             
              
            
             
            </div>
            
            <div class="box-footer clearfix">
         <div class="col-lg-12">
        <h1 class="page-header"></h1>
        <div>  

<table id="rounded-corner" summary="2007 Major IT Companies' Profit">
 <thead>
<tr>    <th scope="col" class="rounded">ID</th>
	<th scope="col" class="rounded">Nom de capteur</th>
         <th scope="col" class="rounded">Etat</th>
	<th scope="col" class="rounded">Modéle</th>
	<th scope="col" class="rounded">Type de capteur</th>
	<th scope="col" class="rounded">L'origine de capteur</th>
       
       {% if app.session.get('utilisat').fonction=='admin'%} <th scope="col" class="rounded">Modifier</th>
        <th scope="col" class="rounded">Supprimer</th>{%endif%}
        <th scope="col" class="rounded">Détail</th>
       
</tr>
</thead>
    <tbody>               
{%for line in res%}
<tr>    <td><a href="{{ path('show_Capteur', { 'id': line.id }) }}">{{line.id}}</td>
	<td>{{line.nomCapteur}}</td>
        <td >  {% if line.etat=='Actif' %}
       <img src="{{asset('bundles/application/images/exit.png')}}" alt="" title="" border="0" />
             {%else%}
            <img src="{{asset('bundles/application/images/exist.png')}}" alt="" title="" border="0" />
             {%endif%} </td > 
	<td>{{line.modeleCapteur}}</td>
        <td>{{line.typecapteur.nomTypeCapteur}}</td>
	<td>{{line.idOrigine.nomOrigine}}</td>
        
        {% if app.session.get('utilisat').fonction=='admin'%}<td ><a href="{{path('Update_Capteur',{'id':line.id})}}"><img src="{{asset('bundles/application/images/modif.png')}}" alt="" title="" border="0" /></a></td>{%endif%}
	{% if app.session.get('utilisat').fonction=='admin'%}<td><a href="{{path('delete_Capteur',{'id':line.id})}}" onclick="if(!confirm('voulez-vous supprimer ce capteur')) return false" class="ask"><img src="{{asset('bundles/application/images/del.png')}}" alt="" title="" border="0" /></a></td>{%endif%}
        <td border-top: 0px solid #fff;><a href="{{path('show_Capteur',{'id':line.id})}}"><img src="{{asset('bundles/application/images/eye-open.png')}}" alt="" title="" border="0" /></a></td>
           
</tr>
</tr>
{%endfor%}
</tbody>
</table>
{% if app.session.get('utilisat').fonction=='admin'%}<a href="{{path('application_form_Ajout_Capteur')}}" class="bt_red"><input type="submit" value="Ajouter un nouvel capteur >>" class="button"></a>
{%endif%}
 </div>
          </div>
                </div>
          </div>
{%endblock%}
{%endblock%}